# =========================
# 指定 RubyGems 源
# =========================
source "https://rubygems.org"

# =========================
# Jekyll 核心
# =========================
gem "jekyll"

# =========================
# Jekyll 插件
# =========================
gem "jekyll-remote-theme"  # 支持 remote_theme
gem "jekyll-toc"           # 文章目录生成
